app
  h1 {title}
  ul
    li(each='{text, i in list}')
      hsltext(index='{i}', length='{list.length}', text='{text}')
  style(type='less').
    :scope {
      display: block;
      padding: 16px 30px;
      min-height: 100%;
      max-width: 900px;
      margin: auto;
      background-color: white;
      ul {
        li {
          font-size: 14px;
        }
      }
    }
  script.
    this.title = 'ribot test';
    this.on('mount', function() {
      var list = [];
      for (var i = 0; i < 40; ++i) {
        list.push('text text ' + (i + 1));
      }
      this.update({ list: list });
    });